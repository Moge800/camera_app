{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "rust: cargo build"
        },
        {
            "type": "cargo",
            "command": "build",
            "args": ["--release"],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build --release"
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "rust: cargo run"
        },
        {
            "type": "cargo",
            "command": "run",
            "args": ["--release"],
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "rust: cargo run --release"
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "rust: cargo test"
        },
        {
            "type": "cargo",
            "command": "clippy",
            "args": ["--", "-D", "warnings"],
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "rust: cargo clippy"
        }
    ]
}
